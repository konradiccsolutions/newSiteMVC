@model IEnumerable<newSiteMVC.Models.tbl_UserControl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container body-content">
    <div class="row">
     
        <div class="col-md-9" style="margin-top: -25px;">
            <br/>
            <p>
                @Html.ActionLink("Create New", "Create", null, new {pageType = @Model.First().PageId}, new {@class = "btn btn-warning"})

                @Html.ActionLink("Edit Section", "EditSection", new {id = @Model.First().Id}, new {@class = "btn btn-info"})
            </p>
            <br/>
            @using (Html.BeginForm("UpdateTableOrder", "Admin", FormMethod.Post))
            {
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Order
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.MainText)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Active)
                        </th>
                        <th>

                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.Id">
                            <td class="priority">
                                @Html.EditorFor(modelItem => item.Priority, new { htmlAttributes = new { @class = "input-sm" , style = "width:55px" }})
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.MainText)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Active)
                            </td>                          
                            <td>
                                @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-info"})
                                @Html.ActionLink("Details", "Details", new {id = item.Id}, new {@class = "btn btn-success"})
                                @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {@class = "btn btn-danger"})
                                @Html.HiddenFor(modelItem => item.Id)
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                <input type="submit" value="submit"/>

            }
        </div>
        </div>
    </div>

