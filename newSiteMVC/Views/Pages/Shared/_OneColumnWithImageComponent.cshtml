@model newSiteMVC.Models.tbl_UserControl

    @if (Model.Priority % 2 == 0)
    {
        <section id="ImagePods" class="bg-dark-gray" style="background-color:@Model.BackgroundColour">
            <div class="container">
                <div class="row" style="margin-right:-100px;margin-left:-15px;margin-top: 70px;margin-bottom: 70px;padding-left: 76px;">
                    <div class="col-md-5">
                        <a href="">
                            <img class="img-responsive img-hover" src="~/Img/@Html.DisplayFor(modelItem => Model.ImageUrl)" alt="" style="box-shadow: 0px 0px 29px -12px; width: 330px; height:auto">
                        </a>
                    </div>
                    <div class="col-md-5">
                        <h3 class="header-colour" style="color:@Model.TitleColour;font-weight: 700;">@Html.Raw(HttpUtility.HtmlDecode(Model.Title))</h3>
                        <p style="color: @Model.MainTextColour">@Html.Raw(HttpUtility.HtmlDecode(Model.MainText))</p>
                        @if (!String.IsNullOrEmpty(Model.ButtonText))
                        {
                            <a class="btn btn-primary" style="background-color:@Model.ButtonColour; color: @Model.ButtonTextColour" href="portfolio-item.html">@Html.DisplayFor(modelItem => Model.ButtonText)</a>
                        }

                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <section id="ImagePods" class="bg-light-gray" style="background-color:@Model.BackgroundColour">
            <div class="container">
                <div class="row" style="margin-right:-100px;margin-left:-15px;margin-top: 70px;margin-bottom: 70px;padding-left: 76px;">
                    <div class="col-md-5">
                        <a href="">
                            <img class="img-responsive img-hover" src="~/Img/@Html.DisplayFor(modelItem => Model.ImageUrl)" alt="" style="box-shadow: 0px 0px 29px -12px;width: 330px; height:auto">
                        </a>
                    </div>
                    <div class="col-md-5">
                        <h3 class="header-colour" style="color:@Model.TitleColour;font-weight: 700;">@Html.Raw(HttpUtility.HtmlDecode(Model.Title))</h3>
                        <p style="color: @Model.MainTextColour">@Html.Raw(HttpUtility.HtmlDecode(Model.MainText))</p>
                        @if (!String.IsNullOrEmpty(Model.ButtonText))
                        {
                            <a class="btn btn-primary" style="background-color:@Model.ButtonColour; color: @Model.ButtonTextColour" href="portfolio-item.html">@Html.DisplayFor(modelItem => Model.ButtonText)</a>
                        }

                    </div>
                </div>
            </div>
        </section>
    }
