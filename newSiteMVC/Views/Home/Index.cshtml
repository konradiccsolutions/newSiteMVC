<section id="ImagePods" class="" style="background-color:@Model.First().SectionBackgroundColour">
    <div class="container">
        <div class="about">
            <div class="row">
                <div class="col-md-12">
                    <h3 style="color:@Model.First().SectionTextColour">Our Products</h3>
                    <span class="text-center" style="border-bottom: 3px solid @Model.First().SectionTextUnderlineColour;"></span>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.OrderBy(it => it.Priority))
            {
            <div class="col-md-4 img-portfolio" style="background-color:@Html.DisplayFor(modelItem => item.BackgroundColour)">
                    <img src="~/Img/@Url.Content(item.ImageUrl)" class="img-responsive img-hover img-pod" alt="IMAGES" />
                <h3>
                    <a href="portfolio-item.html" style="color:@Html.DisplayFor(modelItem => item.TitleColour)">@Url.Content(item.Title)</a>
                </h3>
                <p style="color:@Html.DisplayFor(modelItem => item.MainTextColour)">@Html.DisplayFor(modelItem => item.MainText)</p>
                <a class="btn btn-primary" href="" style="color:@Html.DisplayFor(modelItem => item.ButtonTextColour); background-color:@Html.DisplayFor(modelItem => item.ButtonColour)">@Html.DisplayFor(modelItem => item.ButtonText)</a>
            </div>
            }
        </div>
    </div>
</section>


